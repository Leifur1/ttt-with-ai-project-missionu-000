#!/usr/bin/env ruby


require_relative '../config/environment'

puts "Welcome to Tic Tac Toe!"

puts "How many players? (0, 1 or 2)"
input = gets.strip
case input
  when "0"
    Game.new(Player::Computer.new("X"), Player::Computer.new("O")).play
    puts "That was fun! Would you like to play again?"
    play_again
  when "1"
    Game.new(Player::Human.new("X"), Player::Computer.new("O")).play
    puts "That was fun! Would you like to play again?"
    play_again
  when "2"
    Game.new(Player::Human.new("X"), Player::Human.new("O")).play
    puts "That was fun! Would you like to play again?"
    play_again
  else
    puts "That is an invalid entry"
    start
  end
end

play_again = ""
until play_again.downcase == "n" || play_again.downcase == "no"
puts "Would you like to play again?"
play_again = gets.strip
play_again.downcase == "y" || play_again.downcase == "yes"
game = Game.new
until game.won?
  game.play
end
